<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/swipelayout1"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="a123.vaidya.nihal.foodcrunchserver.Home"
    tools:showIn="@layout/app_bar_home">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="a123.vaidya.nihal.foodcrunchclient.Home"
        tools:showIn="@layout/app_bar_home"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtmanconetnthom3e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparentBlack"
            android:gravity="center"
            android:paddingTop="50dp"
            android:text="@string/EMPTY_LIST"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:scrollbars="vertical"
            tools:layout_editor_absoluteY="300dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtmanconetnthome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparentBlack"
                android:gravity="center"
                android:text="@string/Please_select_a_category"
                android:textColor="@color/white"
                android:textSize="25sp" />


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>
